{% if ingress.enabled %}
apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: {{ ingress.name }}
  namespace: {{ app.namespace }}
spec:
{% if ingress.className %}
  ingressClassName: {{ ingress.className }}
{% endif %}
  rules:
{% if ingress.host %}
  - host: {{ ingress.host }}
    http:
      paths:
      - path: {{ ingress.path }}
        pathType: {{ ingress.pathType }}
        backend:
          service:
            name: {{ service.name }}
            port:
              number: {{ service.port }}
{% else %}
  - http:
      paths:
      - path: {{ ingress.path }}
        pathType: {{ ingress.pathType }}
        backend:
          service:
            name: {{ service.name }}
            port:
              number: {{ service.port }}
{% endif %}
{% endif %}
